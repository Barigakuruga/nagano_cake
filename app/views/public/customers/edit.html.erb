<div class="container">
  <div class="row my-4">
    <h4 class="offset-md-1"><span class="bg-light">会員情報編集</span></h4>
  </div>
<%= form_with model: @customer, url: customer_path(@customer.id), method: :patch  do |f| %>
      <div class="row p-2">
        <%= f.label :氏名, class: "col-md-3" %>
        <%= f.text_field :first_name, :class => "mr-4" %><%= f.text_field :last_name, :class => "col-md-2" %>
      </div>
      <div class="row p-2">
        <%= f.label :フリガナ, class: "col-md-3" %>
        <%= f.text_field :first_name_kana, :class => "mr-4" %><%= f.text_field :last_name_kana, :class => "col-md-2" %>
      </div>
      <div class="row p-2">
        <%= f.label :郵便番号（ハイフンなし）, class: "col-md-3" %>
        <%= f.text_field :postal_code %>
      </div>
      <div class="row p-2">
        <%= f.label :住所, class: "col-md-3 w-25" %>
        <%= f.text_field :address, :class => "w-50" %>
      </div>
      <div class="row p-2">
        <%= f.label :電話番号, class: "col-md-3" %>
        <%= f.text_field :telephone_number %>
      </div>
      <div class="row p-2">
        <%= f.label :メールアドレス, class: "col-md-3" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="row p-2">
        <%= f.submit "編集内容を保存", class: "btn btn-success col-md- offset-md-3" %>
      <% end %>
       <%= link_to unsubscribe_path(@customer.id), class: " col-md- offset-md-2" do %>
      <div class="btn btn-danger" >退会する</div>
    <% end %>
  </div>
</div>

