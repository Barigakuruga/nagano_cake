<div class="container">
  <div class="row">
    <h4>会員情報編集</h4>
  </div>
<%= form_with model: @customer, url: customer_path(@customer.id), method: :patch  do |f| %>
      <div class="row p-2">
        <%= f.label :氏名, class: "col-md-3" %>
        <%= f.text_field :first_name, :class => "col-md-2 mr-5" %><%= f.text_field :last_name, :class => "col-md-2" %>
      </div>
      <div class="row p-2">
        <%= f.label :フリガナ, class: "col-md-3" %>
        <%= f.text_field :first_name_kana, :class => "col-md-2 mr-4" %><%= f.text_field :last_name_kana, :class => "col-md-2" %>
      </div>
      <div class="row p-2">
        <%= f.label :郵便番号（ハイフンなし）, class: "col-md-3" %>
        <%= f.text_field :postal_code %>
      </div>
      <div class="row p-2">
        <%= f.label :住所, class: "col-md-3" %>
        <%= f.text_field :address %>
      </div>
      <div class="row p-2">
        <%= f.label :電話番号, class: "col-md-3" %>
        <%= f.text_field :telephone_number %>
      </div>
      <div class="row p-2">
        <%= f.label :メールアドレス, class: "col-md-3" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      </div>

      <div class="row p-2">
        <%= f.submit "編集内容を保存", class: "btn btn-success btn-md col-2 offset-md-5" %>
      </div>
      <% end %>
       <%= link_to unsubscribe_path(@customer.id), class: "mt-4 col-md-3 offset-md-2" do %>
      <div class="btn btn-success btn-lg " >退会する</div>
    <% end %>


