<div class="container">
  <div class="row my-3">
    <h4 class="offset-md-2"><span class="bg-light">注文履歴一覧</span></h4>
  </div>
 
  <table class="table col-md-10 m-auto table-bordered">
      <thead class="table-secondary">
        <tr>
          <th>注文日</th>
          <th>配送日</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            〒<%= order.postal_code %><br >
            <%= order.address %><br >
            <%= order.customer.first_name %><%= order.customer.last_name %>
          </td>
          <td>
            <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %><br >
            <% end %>
          </td>
          <td><%= order.total_payment %>円</td>
          <td><%= order.status_i18n %></td>
          <td>
            <%= link_to order_path(order.id), class: "mt-4 col-md-3 offset-md-2" do %>
              <div class="btn btn-primary" >表示する</div>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>