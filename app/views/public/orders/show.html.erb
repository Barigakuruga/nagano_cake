<div class="container">
  <h4>注文履歴詳細</h4>
   <div class="row">
     <div>注文情報</div>
    <table class="table">
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
           <tr>
             <th>配送先</th>
             <td>
              〒<%= @order.postal_code %><br >
              <%= @order.address %><br >
              <%= @order.name %>
            </td>
           </tr>
            <tr>
              <th>支払い方法</th>
              <td><%= @order.payment_method_i18n %></td>
            </tr>
            <tr>
              <th>ステータス</th>
              <td><%= @order.status_i18n %></td>
            </tr>
    </table>
    <div>注文内容</div>
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @total = 0 %>
        <% @order_details.each do |detail| %>
        <tr>
          <td><%= detail.item.name %></td>
          <td><%= detail.item.with_tax_price %></td>
          <td><%= detail.amount %></td>
          <td><%= detail.subtotal %></td>
        </tr>
        <% @total += detail.subtotal %>
        <% end %>
      </tbody>
    </table>
    <div>請求情報</div>
    <table class="table">
      <tr>
        <th>商品合計</th>
        <td> <%= @total %>円</td>
      </tr>
      <tr>
        <th>送料</th>
        <td> <%= @order.shipping_cost %>円</td>
      </tr>
      <tr>
        <th>請求額</th>
        <td> <%= @order.total_payment %>円</td>
      </tr>
    </table>
  </div>
</div>