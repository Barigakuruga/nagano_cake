<div class="container">
  <div class="row">
    <h4>注文情報確認</h4>
  </div>
  <div class="row">


    <table class="table">
      <thead class="thead-light">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
        <% @total = 0 %>
        <% @cart_items.each do |cart| %>
          <tr>
            <td><%= image_tag cart.item.get_image(100,100) %> <%= cart.item.name %></td>
            <td><%= cart.item.with_tax_price %></td>
            <td><%= cart.amount %></td>

            <td><%= cart.subtotal %></td>
          </tr>
          <% @total += cart.subtotal %>
          <% end %>
        </tbody>
    </table>
    <table>
    <tr>
      <td>送料 <%= @order.shipping_cost %>円</td>
    </tr>
    <tr>
      <td>商品合計 <%= @total %>円</td>
    </tr>
    <tr>
      <td>請求額 <%= @total_payment = @order.shipping_cost + @total %>円</td>
    </tr>
    </table>
  </div>

  <div>
    <div class="row">
      <h4>支払い方法</h4>
      <%= @order.payment_method_i18n %>
    </div>
    <div class="row">
      <h4>お届け先</h4>
      <%= @order.address_display %>
    </div>
  </div>
  <%= form_with model: @order, url: orders_path, method: :post do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :address %>
  <%= f.hidden_field :postal_code %>
  <%= f.hidden_field :total_payment, value: @total_payment %>
  <%= f.submit "注文を確定する" %>
  <% end %>
</div>