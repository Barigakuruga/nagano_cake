<div class="container text-center">
  <div class="row ">
    <h5 class="col-md-2 offset-md-1 mt-4"><span class=" bg-light">ログイン</span></h5>
  </div>

  <div class="row ">
    <h5 class="col-md-3 offset-md-1 mt-4 text-nowrap"><span class=" bg-light">会員の方はこちらからログイン</span></h5>
  </div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="p-2 m-auto">
    <%= f.label :メールアドレス, class: "col-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "w-50" %>
  </div>

  <div class="p-2 m-auto">
    <%= f.label :パスワード, class: "col-2" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "w-50" %>
  </div>

  <div class="p-4 row">
    <%= f.submit "ログイン", class: "btn btn-primary col-md-2 offset-md-4 " %>
  </div>
<% end %>
  <div class="row ">
    <h5 class="col-md-3 offset-md-1 mt-4"><span class=" bg-light">会員登録がお済みでない方</span></h5>
  </div>

<div class="col-md-8 mt-3">
  <div class="offset-md-1">
  <%= link_to new_customer_registration_path do %>
    こちら
  <% end %>から新規登録を行なってください。
  </div>
</div>
</div>