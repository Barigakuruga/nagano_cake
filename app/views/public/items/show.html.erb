<div class="container">
  <div class="row">
    <div class="col-md-3 m-5">
      <%= image_tag @item.get_image(400,200), size: "250x200" %>
    </div>
    <div class="col-md-6 mt-5">
      <div class="row p-3">
        <h1><%= @item.name %></h1>
      </div>
      <div class="row p-3">
        <h4><%= @item.introduction %></h4>
      </div>
      <div class="row p-3">
        ¥<%= @item.with_tax_price.to_s.gsub(/(\d)(?=\d{3}+$)/, '\\1,') %>（税込）
    </div>

      <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
        <%= f.hidden_field :item_id , :value => @item.id %>

      <div class="d-flex">
        <%= f.select :amount, *[1..10], { include_blank: '個数選択'} %>
        <%= f.submit "カートに入れる", class: "btn btn-success mt-4 col-md-3 offset-md-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>