<div class="container">
  <div class="row">
    <h4>ショッピングカート</h4>
  </div>
  <% @cart_items.each do |cart_item| %>
  <table class="table">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th>#</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th><%= image_tag cart_item.item.get_image(100,100), size: "100x100" %> <%= cart_item.item.name %></th>
        <td><%= cart_item.item.with_tax_price.to_s.gsub(/(\d)(?=\d{3}+$)/, '\\1,') %></td>
        <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
          <td><%= f.select :amount, *[1..10] %> <%= f.submit "変更", class: "btn btn-success btn-sm" %></td>
        <% end %>
        <td><%= cart_item.subtotal.to_s.gsub(/(\d)(?=\d{3}+$)/, '\\1,') %></td>
        <td><%= link_to "削除", cart_item_path(cart_item.id), method: :delete %></td>
      </tr>
    </tbody>
  </table>
  <% end %>
  <% @product_total = 0 %>
  <% @cart_item.each do |total| %>
  <% @product_total += total.subtotal %>
  <% end %>
  <div class="row">
    <%= link_to "買い物を続ける", root_path %>
    <%= @product_total.to_s.gsub(/(\d)(?=\d{3}+$)/, '\\1,') %>円
  </div>
  <%= link_to "情報入力に進む", new_order_path %>
</div>
