<div class="container">
  <div class="row">
    <h4>新規会員登録</h4>
  </div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

      <div class="row p-2">
        <%= f.label :名前, class: "col-md-3" %>
    (姓) <%= f.text_field :first_name, :class => "col-md-2 mr-5" %>（名） <%= f.text_field :last_name, :class => "col-md-2" %>
      </div>
      <div class="row p-2">
        <%= f.label :フリガナ, class: "col-md-3" %>
  （セイ）<%= f.text_field :first_name_kana, :class => "col-md-2 mr-4" %>（メイ）<%= f.text_field :last_name_kana, :class => "col-md-2" %>
      </div>
      <div class="row p-2">
        <%= f.label :メールアドレス, class: "col-md-3" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="row p-2">
        <%= f.label :郵便番号（ハイフンなし）, class: "col-md-3" %>
        <%= f.text_field :postal_code %>
      </div>
      <div class="row p-2">
        <%= f.label :住所, class: "col-md-3" %>
        <%= f.text_field :address %>
      </div>
      <div class="row p-2">
        <%= f.label :電話番号, class: "col-md-3" %>
        <%= f.text_field :telephone_number %>
      </div>
      <div class="row p-2">
        <%= f.label :パスワード（６文字以上）, class: "col-md-3"%>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="row p-2">
        <%= f.label :パスワード（確認用）, class: "col-md-3" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="row p-2">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>

  <div class="row p-2">
    <h4>既に登録済みの方</h4>
  </div>
<%= link_to "こちら", new_customer_session_path %>
</div>