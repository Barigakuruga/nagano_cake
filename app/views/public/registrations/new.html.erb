<div class="container">
  <div class="row mt-3">
    <h4 class="bg-light offset-md-2">新規会員登録</h4>
  </div>
  <div class="col-md-10 mx-auto">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

      <div class="row p-2">
        <%= f.label :名前, class: "col-md-2" %>
        <div class="col-md-1">(姓)</div><%= f.text_field :first_name, :class => "w-25" %><div class="col-md-1">（名）</div><%= f.text_field :last_name, :class => "w-25" %>
      </div>
      <div class="row p-2">
        <%= f.label :フリガナ, class: "col-md-2" %>
    <div class="col-md-1">(セイ)</div><%= f.text_field :first_name_kana, :class => "w-25" %><div class="col-md-1">(メイ)</div><%= f.text_field :last_name_kana, :class => "w-25" %>
      </div>
      <div class="row p-2">
        <%= f.label :メールアドレス, class: "col-md-3" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "w-25" %>
      </div>
      <div class="row p-2">
        <%= f.label :郵便番号（ハイフンなし）, class: "col-md-3" %>
        <%= f.text_field :postal_code, :class => "w-25" %>
      </div>
      <div class="row p-2">
        <%= f.label :住所, class: "col-md-3" %>
        <%= f.text_field :address, :class => "w-50" %>
      </div>
      <div class="row p-2">
        <%= f.label :電話番号, class: "col-md-3" %>
        <%= f.text_field :telephone_number, :class => "w-25" %>
      </div>
      <div class="row p-2">
        <%= f.label :パスワード（６文字以上）, class: "col-md-3"%>
        <%= f.password_field :password, autocomplete: "new-password", :class => "w-25" %>
      </div>

      <div class="row p-2">
        <%= f.label :パスワード（確認用）, class: "col-md-3" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "w-25" %>
      </div>

      <div class="row p-2">
        <%= f.submit "新規登録", class: "btn btn-success offset-md-3" %>
      </div>
    <% end %>

  <div class="row p-2">
    <h4 class="bg-light">既に登録済みの方</h4>
  </div>
<div class="my-3"><%= link_to "こちら", new_customer_session_path %></div>
</div>
</div>