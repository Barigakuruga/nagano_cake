<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div>
    <%= f.label :名前 %>
    <%= f.text_area :first_name %><%= f.text_area :last_name %>
  </div>
  <div>
    <%= f.label :フリガナ %>
    <%= f.text_area :first_name_kana %><%= f.text_area :last_name_kana %>
  </div>
  <div>
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div>
    <%= f.label :郵便番号(ハイフンなし) %>
    <%= f.text_area :postal_code %>
  </div>
  <div>
    <%= f.label :住所 %>
    <%= f.text_area :address %>
  </div>
  <div>
    <%= f.label :電話番号 %>
    <%= f.text_area :telephone_number 
  </div>
  <div>
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
