<div class="container">
  <div class="row">
    <div class="bg-light m-4 col-md-3">
      <strong>
        <%= @customer.first_name %><%= @customer.last_name %>
      </strong>
      さんの
      <strong>
        会員詳細
      </strong>
    </div>
  </div>
  <div class="col-md-8">
    <div class="row p-2">
      <div class="col-md-3">会員id</div><%= @customer.id %>
    </div>
    <div class="row p-2">
      <div class="col-md-3">氏名</div><%= @customer.first_name %> <%= @customer.last_name %>
    </div>
    <div class="row p-2">
      <div class="col-md-3">郵便番号</div><%= @customer.postal_code %>
    </div>
    <div class="row p-2">
      <div class="col-md-3">住所</div><%= @customer.address %>
    </div>
    <div class="row p-2">
      <div class="col-md-3">電話番号</div><%= @customer.telephone_number %>
    </div>
    <div class="row p-2">
      <div class="col-md-3">メールアドレス</div><%= @customer.email %>
    </div>
    <div class="row p-2">
      <div class="col-md-3">会員ステータス</div>
      <% if @customer.is_deleted %>
      <div class="text-secondary">無効</div>
      <% else %>
      <div class="text-success">有効</div>
      <% end %>
    </div>
    <div class="mt-3">
      <%= link_to edit_admin_customer_path, class: "p-4" do %>
        <i class="btn-success btn-lg col-md-2 offset-md-2">編集する</i>
      <% end %>

      <%= link_to admin_root_path, class: "p-4" do %>
        <i class="btn-primary btn-lg col-md-3" >注文履歴一覧を見る</i>
      <% end %>
    </div>
</div>