<div>
  <h2>会員一覧</h2>
  <div class="container">
    <table class="table col">
      <thead>
        <tr>
          <th>会員id</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.first_name, admin_customer_path(customer.id) %><%= link_to customer.last_name, admin_customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
          <td>
            <% if customer.is_deleted %>
            <div class="text-secondary">無効</div>
            <% else %>
            <div class="text-success">有効</div>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= paginate @customers %>