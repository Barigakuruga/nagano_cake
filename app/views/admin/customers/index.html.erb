

  <div class="container">
    <div class="row">
      <h4 class="bg-light m-3 text-center col-md-2">会員一覧</h4>
    </div>
    <table class="table col-md-10 text-center m-auto">
      <thead class="table-secondary">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.first_name, admin_customer_path(customer.id) %><%= link_to customer.last_name, admin_customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
          <td>
            <% if customer.is_deleted %>
            <div class="text-secondary">退会</div>
            <% else %>
            <div class="text-success">有効</div>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<%= paginate @customers %>