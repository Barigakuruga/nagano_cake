
<div class="container">
  <% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  <div class="row m-4">
    <h4 class="col-md-2 bg-light offset-md-2">商品編集</h4>
  </div>
      <%= form_with model: @item, url: admin_item_path(@item.id) do |f| %>
      <div class="field row pb-2">
        <%= f.label:商品画像, class: "col-2 offset-md-3" %>
        <%= f.file_field :image %>
      </div>
      <div class="field row pb-2">
        <%= f.label:商品名, class: "col-2 offset-md-3" %>
        <%= f.text_field :name, class: "w-25" %>
      </div>
      <div class="field row pb-2">
        <%= f.label:商品説明, class: "col-2 offset-md-3" %>
        <%= f.text_area :introduction, class: "w-25" %>
      </div>
      <div class="field row pb-2">
        <%= f.label:ジャンル, class: "col-2 offset-md-3" %>
        <%= f.collection_select(:genre_id, @genre, :id, :name) %>
      </div>
      <div class="field row pb-2">
        <%= f.label:税抜価格, class: "col-2 offset-md-3" %>
        <%= f.text_field :price, class: "w-25" %>円
      </div>
      <div class="field row pb-2 mx-2">
        <%= f.label:販売ステータス, class: " offset-md-3" %>
        <div>
          <%= f.radio_button :is_active, :true %>
          <%= f.label:販売中, class: "mr-2" %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label:販売停止中 %>
        </div>
      </div>
      <div class="actions m-2">
        <%= f.submit "変更を保存", class: "btn btn-success btn-md col-2 offset-md-5" %>
      </div>
      <% end %>

</div>